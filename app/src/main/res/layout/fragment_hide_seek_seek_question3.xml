<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout15"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hide_seek.hide_seek_seek_question3" >

    <TextView
        android:id="@+id/question3_view"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:layout_marginTop="108dp"
        android:text="問題文"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question3_ans1"
        android:layout_width="248dp"
        android:layout_height="41dp"
        android:layout_marginTop="144dp"
        android:text="解答1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question3_view" />

    <TextView
        android:id="@+id/question3_ans2"
        android:layout_width="272dp"
        android:layout_height="58dp"
        android:layout_marginTop="80dp"
        android:text="解答2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question3_ans1" />

    <TextView
        android:id="@+id/question3_ans3"
        android:layout_width="306dp"
        android:layout_height="49dp"
        android:text="解答3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question3_ans2"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/next_sample3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question3_ans3" />
</androidx.constraintlayout.widget.ConstraintLayout>