<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutTotal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exchange.exchange_input_total">

    <Button
        android:id="@+id/nextButtonTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="36dp"
        android:background="#99FFFFFF"
        android:text="次へ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inputTotalNumber"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="#99FFFFFF"
        android:ems="10"
        android:gravity="clip_vertical|start|right|center_horizontal|center_vertical"
        android:inputType="number"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inputTotalText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#99FFFFFF"
        android:gravity="center_horizontal"
        android:text="プレゼント交換に参加する人数を入力してください"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/inputTotalNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#99FFFFFF"
        android:text="人"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/inputTotalNumber"
        app:layout_constraintStart_toEndOf="@+id/inputTotalNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>